{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "noUnusedLocals": true,
        "inlineSources": true,
        "noImplicitReturns": true
    },
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true,
        "useWebpackText": true,
        "useCache": true,
        "useBabel": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}