{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",        
    "sourceMap": true,
     "typeRoots": [
      "./node_modules/@types"
    ],
    "noUnusedLocals": true,    
    "inlineSources": true,
    "noImplicitReturns": true    
  },
  "exclude": [
    "node_modules"    
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
